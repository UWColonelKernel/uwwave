{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es5", "es6", "dom", "es2021"],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": false,
        "noEmit": true,
        "outDir": "./dist/",
        "noImplicitAny": true,
        "types": ["chrome"]
    },
    "include": ["./src/**/*"]
}
